<resources>
    <style name="BaseTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar.Bridge">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/jacksons_purple</item>
        <item name="colorPrimaryVariant">@color/jacksons_purple</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:navigationBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowBackground">@color/white</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="AppTheme" parent="BaseTheme" />

    <style name="AppTheme.Splash">
        <item name="android:windowBackground">@drawable/launch_background</item>
        <item name="android:navigationBarColor">@color/jacksons_purple</item>
    </style>
</resources>
