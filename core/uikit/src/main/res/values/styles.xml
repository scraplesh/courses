<resources>

    <style name="Theme.Base" parent="Theme.MaterialComponents.DayNight.NoActionBar.Bridge">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/jacksons_purple</item>
        <item name="colorPrimaryVariant">@color/jacksons_purple</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:navigationBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowBackground">@color/white</item>

        <item name="textInputStyle">@style/CbsTextInputLayout</item>
        <item name="materialButtonStyle">@style/CbsPrimaryButton</item>
    </style>

    <style name="Theme.CbsApp" parent="Theme.Base" />

    <style name="ShapeAppearanceOverlay.MaterialComponents.CbsChip" parent="">
        <item name="cornerSize">@dimen/size_4</item>
    </style>

    <style name="Theme.CbsApp.Splash">
        <item name="android:windowBackground">@drawable/launch_background</item>
        <item name="android:navigationBarColor">@color/jacksons_purple</item>
    </style>

    <!-- region Styles -->
    <style name="CbsTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">@color/dodger_blue</item>
        <item name="boxStrokeErrorColor">@color/bittersweet</item>
        <item name="boxStrokeWidth">@dimen/edittext_stroke_width</item>
        <item name="errorEnabled">true</item>
        <item name="errorIconDrawable">@null</item>
        <item name="errorTextAppearance">@style/CbsTextAppearance.EditTextError</item>
        <item name="errorTextColor">@color/guardsman_red</item>
        <item name="hintEnabled">false</item>
        <item name="materialThemeOverlay">@style/CbsTextInputEditText</item>
    </style>

    <style name="CbsTextInputEditText" parent="ThemeOverlay.MaterialComponents.TextInputEditText.OutlinedBox">
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:textColorHint">@color/jumbo</item>
    </style>

    <style name="CbsPrimaryButton" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@null</item>
        <item name="textAllCaps">false</item>
        <item name="android:background">@drawable/background_button_primary</item>
        <item name="shapeAppearance">@style/ShapeAppearance.CbsPrimaryButton</item>
        <item name="android:textAppearance">@style/CbsTextAppearance.PrimaryButton</item>
    </style>

    <style name="ShapeAppearance.CbsPrimaryButton" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerSize">@dimen/button_corner_size</item>
    </style>

    <!-- endregion -->
</resources>
