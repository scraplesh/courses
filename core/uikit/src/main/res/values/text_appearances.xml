<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CbsTextAppearance" parent="TextAppearance.AppCompat" />

    <style name="CbsTextAppearance.H1">
        <item name="android:textColor">@color/woodsmoke</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textSize">@dimen/text_size_26</item>
    </style>

    <style name="CbsTextAppearance.EditTextError">
        <item name="android:textSize">@dimen/text_size_14</item>
    </style>

    <style name="CbsTextAppearance.PrimaryButton">
        <item name="android:textSize">@dimen/text_size_18</item>
    </style>

    <style name="CbsTextAppearance.TextWithButton">
        <item name="android:textSize">@dimen/text_size_13</item>
        <item name="android:textColor">@color/woodsmoke</item>
    </style>

    <style name="CbsTextAppearance.SmallText">
        <item name="android:textSize">@dimen/text_size_13</item>
        <item name="android:textColor">@color/jumbo</item>
    </style>
</resources>