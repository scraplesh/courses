<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewpager_onboarding_slides"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        app:layout_constraintBottom_toTopOf="@id/button_onboarding_registration"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        />

    <Button
        android:id="@+id/button_onboarding_registration"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="@string/onboarding_registration"
        app:layout_constraintBottom_toTopOf="@id/textview_onboarding_already_have_account"
        app:layout_constraintEnd_toEndOf="@id/guide_onboarding_end"
        app:layout_constraintStart_toStartOf="@id/guide_onboarding_start"
        app:layout_constraintTop_toBottomOf="@id/viewpager_onboarding_slides"
        />

    <TextView
        android:id="@+id/textview_onboarding_already_have_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="@string/onboarding_already_have_account"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/guide_onboarding_end"
        app:layout_constraintStart_toStartOf="@id/guide_onboarding_start"
        app:layout_constraintTop_toBottomOf="@id/button_onboarding_registration"
        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guide_onboarding_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="@dimen/spacing_big"
        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guide_onboarding_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="@dimen/spacing_big"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
