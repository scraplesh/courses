<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <Button
            android:id="@+id/button_signin_back"
            android:layout_width="@dimen/toolbar_height"
            android:layout_height="@dimen/toolbar_height"
            android:background="@null"
            android:text="â¬…"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

        <TextView
            android:id="@+id/textview_signin_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-black"
            android:text="@string/signin_account_enter"
            android:textColor="@android:color/black"
            android:textSize="30sp"
            app:layout_constraintBottom_toTopOf="@id/edittext_signin_signin"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="packed"
            />

        <EditText
            android:id="@+id/edittext_signin_signin"
            android:layout_width="0dp"
            android:layout_height="64dp"
            android:layout_marginTop="40dp"
            android:hint="@string/signin_e_mail"
            app:layout_constraintBottom_toTopOf="@id/edittext_signin_password"
            app:layout_constraintEnd_toEndOf="@id/guide_signin_end"
            app:layout_constraintStart_toStartOf="@id/guide_signin_start"
            app:layout_constraintTop_toBottomOf="@id/textview_signin_title"
            />

        <EditText
            android:id="@+id/edittext_signin_password"
            android:layout_width="0dp"
            android:layout_height="64dp"
            android:layout_marginTop="16dp"
            android:hint="@string/signin_password"
            app:layout_constraintBottom_toTopOf="@id/button_signin_signin"
            app:layout_constraintEnd_toEndOf="@id/guide_signin_end"
            app:layout_constraintStart_toStartOf="@id/guide_signin_start"
            app:layout_constraintTop_toBottomOf="@id/edittext_signin_signin"
            />

        <Button
            android:id="@+id/button_signin_signin"
            android:layout_width="0dp"
            android:layout_height="64dp"
            android:layout_marginTop="16dp"
            android:text="@string/signin_enter"
            app:layout_constraintBottom_toTopOf="@id/textview_signin_restore"
            app:layout_constraintEnd_toEndOf="@id/guide_signin_end"
            app:layout_constraintStart_toStartOf="@id/guide_signin_start"
            app:layout_constraintTop_toBottomOf="@id/edittext_signin_password"
            />

        <TextView
            android:id="@+id/textview_signin_restore"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:gravity="center"
            android:textSize="18sp"
            android:text="@string/signin_restore_password"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/guide_signin_end"
            app:layout_constraintStart_toStartOf="@id/guide_signin_start"
            app:layout_constraintTop_toBottomOf="@id/button_signin_signin"
            />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guide_signin_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="30dp"
            />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guide_signin_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_end="30dp"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>
